<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - SoleMate</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
   <link rel="stylesheet" href="/stylesheet/admin.css">
</head>
<body>
    <!-- Sidebar Navigation -->
    <aside class="admin-sidebar">
        <div class="logo">
            <i class="fas fa-shoe-prints"></i>
            <h1>Sole<span>Mate</span></h1>
        </div>
        
        <nav class="admin-nav">
            <a href="/owners/admin" class="active">
                <i class="fas fa-tachometer-alt"></i>
                Dashboard
            </a>
            <a href="/owners/admin/create/product">
                <i class="fas fa-plus-circle"></i>
                Create Product
            </a>
            <a href="/admin/products">
                <i class="fas fa-shoe-prints"></i>
                Products
            </a>
            <a href="/admin/orders">
                <i class="fas fa-shopping-bag"></i>
                Orders
            </a>
            <a href="/admin/customers">
                <i class="fas fa-users"></i>
                Customers
            </a>
            
            <a href="/admin/logout">
                <i class="fas fa-sign-out-alt"></i>
                Logout
            </a>
        </nav>
    </aside>
    
    <!-- Main Content -->
    <main class="admin-main">
        <div class="admin-header">
            <h1 class="admin-title">Dashboard Overview</h1>
            <div class="admin-actions">
                <button class="admin-btn admin-btn-primary">
                    <i class="fas fa-plus"></i> New Product
                </button>
                
                <div class="admin-user">
                    <img src="https://www.pngmart.com/files/21/Admin-Profile-Vector-PNG-File.png" alt="Admin">
                    <span>Admin</span>
                </div>
            </div>
        </div>
        
        <!-- Stats Cards -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-info">
                    <h3>Total Sales</h3>
                    <div class="stat-value">â‚¹24,589</div>
                    <div class="stat-change change-up">
                        <i class="fas fa-arrow-up"></i> 12.5% from last month
                    </div>
                </div>
                <div class="stat-icon stat-sales">
                    <i class="fas fa-dollar-sign"></i>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-info">
                    <h3>New Orders</h3>
                    <div class="stat-value">186</div>
                    <div class="stat-change change-up">
                        <i class="fas fa-arrow-up"></i> 8.3% from last month
                    </div>
                </div>
                <div class="stat-icon stat-orders">
                    <i class="fas fa-shopping-bag"></i>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-info">
                    <h3>Products</h3>
                    <div class="stat-value">342</div>
                    <div class="stat-change change-up">
                        <i class="fas fa-arrow-up"></i> 5 new this week
                    </div>
                </div>
                <div class="stat-icon stat-products">
                    <i class="fas fa-shoe-prints"></i>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-info">
                    <h3>Customers</h3>
                    <div class="stat-value">1,284</div>
                    <div class="stat-change change-down">
                        <i class="fas fa-arrow-down"></i> 2.1% from last month
                    </div>
                </div>
                <div class="stat-icon stat-customers">
                    <i class="fas fa-users"></i>
                </div>
            </div>
        </div>
        
        <!-- Charts Section -->
        <div class="charts-section">
            <div class="chart-card">
                <div class="chart-header">
                    <h2 class="chart-title">Sales Overview</h2>
                    <div class="chart-period">
                        <button class="period-btn active">Week</button>
                        <button class="period-btn">Month</button>
                        <button class="period-btn">Year</button>
                    </div>
                </div>
                <div class="chart-placeholder">
                    Sales Chart Would Appear Here
                </div>
            </div>
            
            <div class="chart-card">
                <div class="chart-header">
                    <h2 class="chart-title">Revenue Sources</h2>
                </div>
                <div class="chart-placeholder">
                    Revenue Pie Chart Would Appear Here
                </div>
            </div>
        </div>
        
        <!-- Recent Activity Section -->
        <div class="activity-section">
            <div class="activity-card">
                <div class="activity-header">
                    <h2 class="activity-title">Recent Orders</h2>
                    <a href="/admin/orders" class="view-all">View All</a>
                </div>
                <div class="activity-list">
                    <div class="order-item">
                        <img src="https://images.unsplash.com/photo-1600269452121-4f2416e55c28?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=100&q=80" alt="Nike Air Max" class="order-image">
                        <div>
                            <div class="order-product">Nike Air Max 270</div>
                            <div class="order-id">Order #SM-98765</div>
                        </div>
                        <span class="order-status status-delivered">Delivered</span>
                    </div>
                    
                    <div class="order-item">
                        <img src="https://images.unsplash.com/photo-1542291026-7eec264c27ff?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=100&q=80" alt="Adidas Ultraboost" class="order-image">
                        <div>
                            <div class="order-product">Adidas Ultraboost</div>
                            <div class="order-id">Order #SM-98764</div>
                        </div>
                        <span class="order-status status-shipped">Shipped</span>
                    </div>
                    
                    <div class="order-item">
                        <img src="https://images.unsplash.com/photo-1600185365483-26d7a4cc7519?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=100&q=80" alt="Puma RS-X" class="order-image">
                        <div>
                            <div class="order-product">Puma RS-X</div>
                            <div class="order-id">Order #SM-98763</div>
                        </div>
                        <span class="order-status status-processing">Processing</span>
                    </div>
                </div>
            </div>
            
            <div class="activity-card">
                <div class="activity-header">
                    <h2 class="activity-title">Recent Activity</h2>
                    <a href="/admin/activity" class="view-all">View All</a>
                </div>
                <div class="activity-list">
                    <div class="activity-item">
                        <div class="activity-icon">
                            <i class="fas fa-shopping-bag"></i>
                        </div>
                        <div class="activity-details">
                            <p class="activity-message">New order #SM-98765 placed by John Doe</p>
                            <p class="activity-time">10 minutes ago</p>
                        </div>
                    </div>
                    
                    <div class="activity-item">
                        <div class="activity-icon">
                            <i class="fas fa-user-plus"></i>
                        </div>
                        <div class="activity-details">
                            <p class="activity-message">New customer registration: Sarah Smith</p>
                            <p class="activity-time">45 minutes ago</p>
                        </div>
                    </div>
                    
                    <div class="activity-item">
                        <div class="activity-icon">
                            <i class="fas fa-shoe-prints"></i>
                        </div>
                        <div class="activity-details">
                            <p class="activity-message">Product "Nike Air Max 270" was updated</p>
                            <p class="activity-time">2 hours ago</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        // Chart period switching
        document.querySelectorAll('.period-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.period-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                // In a real implementation, this would update the chart data
            });
        });
        
        // New product button
        document.querySelector('.admin-btn-primary').addEventListener('click', function() {
            window.location.href = '/owners/admin/create/product';
        });
    </script>
</body>
</html>