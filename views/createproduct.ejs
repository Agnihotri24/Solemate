<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Product - SoleMate Admin</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
   <link rel="stylesheet" href="/stylesheet/createproduct.css">
</head>
<body>
    <!-- Sidebar Navigation -->
    <aside class="admin-sidebar">
        <div class="logo">
            <i class="fas fa-shoe-prints"></i>
            <h1>Sole<span>Mate</span></h1>
        </div>
        
        <nav class="admin-nav">
            <a href="/owners/admin">
                <i class="fas fa-tachometer-alt"></i>
                Dashboard
            </a>
            <a href="/owners/admin/create/product" class="active">
                <i class="fas fa-plus-circle"></i>
                Create Product
            </a>
            <a href="/admin/orders">
                <i class="fas fa-shopping-bag"></i>
                Orders
            </a>
            <a href="/admin/customers">
                <i class="fas fa-users"></i>
                Customers
            </a>
            <a href="/admin/logout">
                <i class="fas fa-sign-out-alt"></i>
                Logout
            </a>
        </nav>
    </aside>
    
    <!-- Main Content -->
    <main class="admin-main">
        <div class="admin-header">
            <h1 class="admin-title">Create New Product</h1>
            <div class="admin-user">
                <img src="https://www.pngmart.com/files/21/Admin-Profile-Vector-PNG-Photos.png" alt="Admin">
                <span>Admin</span>
            </div>
        </div>
        
        <form class="product-form" action="/products/create" method="POST" enctype="multipart/form-data">
            <!-- Basic Information Section -->
            <div class="form-section">
                <h3>Basic Information</h3>

                <div class="form-grid">
                    <div class="form-group">
                        <label for="name">Product Name</label>
                        <input type="text" id="name" name="name" required placeholder="e.g., Air Max 270 React">
                    </div>
                    
                    <div class="form-group">
                        <label for="brand">Brand</label>
                        <select id="brand" name="brand" required>
                            <option value="">Select Brand</option>
                            <option value="Nike">Nike</option>
                            <option value="Adidas">Adidas</option>
                            <option value="Puma">Puma</option>
                            <option value="Reebook">Reebok</option>
                            <option value="Vans">Vans</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    
                    <div class="form-group full-width">
                        <label for="description">Product Description</label>
                        <textarea id="description" name="description" required placeholder="Describe the product features and benefits"></textarea>
                    </div>
                </div>
            </div>
            
            <!-- Pricing Section -->
            <div class="form-section">
                <h3>Pricing</h3>
                <div class="form-grid">
                    <div class="form-group">
                        <label for="price">Price (â‚¹)</label>
                        <input type="number" id="price" name="price" min="0" step="0.01" required placeholder="99.99">
                    </div>
                    
                    <div class="form-group">
                        <label for="discount">Discount (%)</label>
                        <input type="number" id="discount" name="discount" min="0" max="100" placeholder="0">
                    </div>
                  
                    
                </div>
            </div>
            
          
            
            <!-- Media Section -->
            <div class="form-section">
                <h3>Product Images</h3>
                <div class="form-group full-width">
                    <label for="images">Upload Product Images</label>
                    <div class="image-upload" id="image-upload">
                
                        <input type="file" name="productimage" accept="image/*" required />
                    </div>
                </div>
            </div>
            
            <button type="submit" class="submit-btn">
                <i class="fas fa-save"></i> Create Product
            </button>
        </form>
    </main>

    
</body>
</html>